# Copy to config/.env and update values as needed.
POSTGRES_USER=hc_admin
POSTGRES_PASSWORD=hc_password
POSTGRES_DB=homecredit_db
AIRFLOW__CORE__FERNET_KEY=
AIRFLOW_USERNAME=admin
AIRFLOW_PASSWORD=admin
AIRFLOW_ADDITIONAL_REQUIREMENTS=
GEMINI_API_KEY=changeme
OPENAI_API_KEY=
FEAST_PROJECT=hc_risk
REDIS_HOST=redis
REDIS_PORT=6379

# Chatbot Enhanced Features
USE_ENHANCED_GRAPH=true  # Enable enhanced chatbot with more tools and memory management
ENABLE_CHECKPOINTING=true  # Enable PostgreSQL checkpointing for conversation persistence
REDIS_CACHE_DB=1  # Redis database number for caching (0 is used by Feast online store)

# LangSmith Observability (Optional - Free tier available)
LANGSMITH_API_KEY=changeme  # Get free key from https://smith.langchain.com
LANGSMITH_PROJECT=hc-risk-chatbot  # Project name in LangSmith dashboard
